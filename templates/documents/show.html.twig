{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
    <h1>Document Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Files</h2><br>
  	{% for file in document.files %}
	<div>
   		<a href="{{ asset('http://10.0.0.167/docs/public/uploads/'~ file.title) }}" target="_blank"><img src="{{ asset('http://10.0.0.167/docs/public/uploads/'~ file.title) }}" alt="Image" class="img-thumbnail" style="height: 200px"></a><br>
   		{# <a href="{{ path('documents_delete_file', {id: file.id})}}" data-delete data-token="{{ csrf_token('delete' ~ file.id )}}">Delete</a>#}
	</div>
	{% endfor %}

    <a class="btn btn-primary" href="{{ path('documents_index') }}">back to list</a>

    <a class="btn btn-dark" href="{{ path('documents_edit', {'id': document.id}) }}">edit</a>
    </div>

    {{ include('documents/_delete_form.html.twig') }}
{% endblock %}
